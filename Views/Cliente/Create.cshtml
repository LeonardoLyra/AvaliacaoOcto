@model Cliente

@{
    var tipoC = ViewBag.TipoC;

    <form asp-controller="Cliente" asp-action="Create" method="POST">
        <script type="text/javascript">
            function update() {

                @ViewBag.TipoC= $('#tipo option:selected').text();

                alert(@ViewBag.TipoC);
            }

            update();
        </script>

        <h2>Cadastrar Cliente</h2>
        <br />
        <div class="form-group">
            <label asp-for="Nome">Nome do Cliente</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome"></span>
        </div>

        <div class="form-group">
            <label>Tipo de Pessoa</label>
            <select asp-for="IdCliente" id="tipo" class="form-control" onchange="update()">
                @foreach (var tipo in ViewBag.Tipo)
                {
                    <option value="@tipo">@tipo</option>

                }
            </select>
        </div>

        @if (tipoC == "PF")
        {
            <div class="form-group">
                <label>CPF</label>
                <input id="masc-cpf" asp-for="CPF_CNPJ" class="form-control" />
                <span asp-validation-for="CPF_CNPJ"></span>
            </div>

        }
        else
        {
            <div class="form-group">
                <label>CNPJ</label>
                <input id="masc-cnpj" asp-for="CPF_CNPJ" class="form-control" />
                <span asp-validation-for="CPF_CNPJ"></span>
            </div>



        }


        <button class="btn btn-primary">Salvar</button>

    </form>


}
